<view class="tabs">
    <view class="tabs_title" style="background-color: {{tabBgColor}}">
        <view class="title_item {{item.isActive ? 'active' : ''}}" bindtap="handleItemTap" data-index="{{index}}" wx:for="{{tabs}}" wx:key="id">{{item.name}}</view>
    </view>
    <view class="tabs_content">
        <slot></slot>
    </view>
</view>
